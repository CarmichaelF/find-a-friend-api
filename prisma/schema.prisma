generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ORG {
  id            String  @id @default(uuid())
  name          String
  email         String  @unique
  zipcode       String
  address       String
  city          String
  latitude      Decimal
  longitude     Decimal
  phone         String
  password_hash String
  Pet           Pet[]
}

model PetRequirement {
  id          String  @id @default(uuid())
  description String
  Pet         Pet?    @relation(fields: [petId], references: [id])
  petId       String?
}

model Pet {
  id           String           @id @default(uuid())
  name         String
  description  String
  requirements PetRequirement[]
  org          ORG              @relation(fields: [oRGId], references: [id])
  oRGId        String
}
