// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model OrgAddress {
  id        String  @id @default(uuid())
  street    String
  latitude  Decimal
  longitude Decimal
  ORG       ORG[]
}

model ORG {
  id            String     @id @default(uuid())
  name          String
  email         String     @unique
  postalCode    String
  address       OrgAddress @relation(fields: [addressId], references: [id])
  addressId     String
  phone         String
  password_hash String
  Pet           Pet[]
}

model PetRequirement {
  id          String  @id @default(uuid())
  description String
  Pet         Pet?    @relation(fields: [petId], references: [id])
  petId       String?
}

model Pet {
  id           String           @id @default(uuid())
  name         String
  description  String
  requirements PetRequirement[]
  org          ORG              @relation(fields: [oRGId], references: [id])
  oRGId        String
}
