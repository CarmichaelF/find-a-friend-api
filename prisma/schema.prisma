generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PetRequirement {
  id          String  @id @default(uuid())
  description String
  Pet         Pet?    @relation(fields: [petId], references: [id])
  petId       String?
}

model Pet {
  id           String           @id @default(uuid())
  name         String
  description  String
  requirements PetRequirement[]
}
